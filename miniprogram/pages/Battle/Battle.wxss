/*主界面*/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-size: cover;
  background-position: center;
  position: relative;
  overflow: hidden;
} 
/*主界面*/
.overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}


/* 主界面上部分 - 滚轮外层容器 */
.roller-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}
/* 滚轮外层容器 */
.roller-container {
  width: 600rpx;
  height: 500rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  /*background: rgba(255, 255, 255, 0.1); - 颜色*/
  border-radius: 40rpx;
  /* 3D透视效果 */
  perspective: 1000rpx;
}
/* 渐变遮罩：让滚轮边缘产生消失感 */
.roller-mask {
  width: 100%;
  height: 500rpx;
  position: relative;
  /* 左右弧形边框，像括号 */
  border-radius: 100rpx / 90%;
  overflow: hidden;
  /* 磨砂玻璃效果 */
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15px);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  /* 上下渐变：模拟圆柱体的上下边缘消失 */
  -webkit-mask-image: linear-gradient(
    to bottom,
    transparent 0%,
    rgba(255, 255, 255, 0.1) 30%,
    rgba(255, 255, 255, 0.1) 70%,
    transparent 100%
  );
  mask-image: linear-gradient(
    to bottom,
    transparent 0%,
    rgba(255, 255, 255, 0.1) 30%,
    rgba(255, 255, 255, 0.1) 70%,
    transparent 100%
  );
}

/* 滚轮内容包裹层 - 椭圆径向渐变模拟圆柱体弧面 */
.roller-mask::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* 椭圆形径向渐变：中间亮，两边暗，模拟圆柱体表面 */
  background: radial-gradient(
    ellipse 100% 200% at center,
    transparent 0%,
    transparent 40%,
    rgba(0, 0, 0, 0.2) 70%,
    rgba(0, 0, 0, 0.5) 100%
  );
  /* 渐变层也添加磨砂效果 */
  backdrop-filter: blur(8px);
  pointer-events: none;
  z-index: 10;
}
/* 滚轮的大小 */
.habit-roller {
  width: 100%;
  height: 500rpx;
}
/* 滚轮单项样式 */
.roller-item {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: normal;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  transform: scale(0.85);
  opacity: 0.5;
}
/* 选中项 - 中间往外凸 */
.roller-item.selected {
  transform: scale(1.15);
  opacity: 1;
  font-size: 44rpx;
  font-weight: bold;
}
/* 范例文字样式 */
.example {
  opacity: 0.6;
  font-style: italic;
}
/* 选中项的横线（可选，如果不需要可以设为透明） */
.habit-roller .picker-view-column {
  border: none;
}

/* 卡片外层容器 - 下半部分 */
.card-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.card {
  width: 80%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  text-align: center;
}

.title {
  color: #fff;
  font-size: 36rpx;
  letter-spacing: 4rpx;
  margin-bottom: 30rpx;
  display: block;
}







.input-box {
  border: 2rpx solid #ff4d4f;
  box-shadow: 0 0 15rpx rgba(255, 77, 79, 0.3);
  border-radius: 15rpx;
  height: 90rpx;
  color: #fff;
  margin-bottom: 50rpx;
  background: rgba(0, 0, 0, 0.2);
}

.ph-color {
  color: rgba(255, 255, 255, 0.4);
}

.advice-text {
  color: #fff;
  font-size: 32rpx;
  line-height: 1.8;
  display: block;
  margin-bottom: 60rpx;
}

.btn-start, .btn-primary {
  background: #f0f0f0;
  color: #222;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.btn-group {
  display: flex;
  gap: 20rpx;
}

.btn-secondary {
  background: transparent;
  color: #eee;
  border: 1rpx solid #eee;
  font-size: 28rpx;
}
