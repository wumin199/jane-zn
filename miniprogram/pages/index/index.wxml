<view class="container" style="background-image: url('{{customBg ? customBg : '../../images/bg.png'}}');" bindtap="onContainerTap">
  <view class="overlay" data-class="overlay"></view>
  
  <!-- 背景设置提示 -->
  <view class="bg-tip" wx:if="{{showBgTip}}">
    <text>点击背景可更换图片</text>
  </view> 

  <!-- 没有习惯时显示 -->
  <view class="content" wx:if="{{!hasHabits}}">
    <view class="add-button" catchtap="goToAddHabit">
      <text class="plus">+</text>
    </view>
    
    <view class="slogan">
      <text class="main-text">开启对抗人性弱点之旅</text>
      <text class="sub-text">往你喜欢的方向前进吧。现在，添加你想抵制的习惯吧。</text>
    </view>
  </view>

  <!-- 已有习惯时显示两个按钮 -->
  <view class="content" wx:else>
    <view class="button-group">
      <view class="menu-button" catchtap="goToBattle">
        <image class="button-icon-img animated" src="../../images/battle1.png" mode="aspectFit"></image>
        <text class="button-text">挑战自己</text>
      </view>
      
      <view class="menu-button tight-gap" catchtap="goToAddHabit">
        <image class="button-icon-img large" src="../../images/battle2.png" mode="aspectFit"></image>
        <text class="button-text text-overlay">添加感悟</text>
      </view>
    </view>
  </view>
</view>