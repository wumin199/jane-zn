.weui-glass-picker {
  width: 540rpx;
  height: 350rpx;
  position: relative;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(15px);
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  margin: 0 auto;
  -webkit-mask-image: linear-gradient(
    to bottom,
    transparent 0%,
    black 20%,
    black 80%,
    transparent 100%
  );
  mask-image: linear-gradient(
    to bottom,
    transparent 0%,
    black 20%,
    black 80%,
    transparent 100%
  );
}

.weui-picker-view {
  width: 100%;
  height: 100%;
}

.weui-picker-view picker-view-column {
  width: 100%;
}

.weui-picker-item {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  opacity: 0.5;
  transform: scale(0.85);
}

.weui-picker-item-selected {
  opacity: 1;
  font-size: 44rpx;
  font-weight: bold;
  transform: scale(1.15);
}
